<config>
	<db>sqlite</db> <!-- Look inside the db directory for available options. -->
	<prefix>1.90</prefix> <!-- Prefix database so it won't interfere with other installations. -->
	
	<!-- SQLite Options -->
	<sqlite_path>/tmp/</sqlite_path> <!-- Path to writable directory for storing database. Default value of UNDER_DOCUMENT_ROOT keyword should work for default Apache/PHP installations. -->
	<!-- Example: /home/arthur/sqlite_data/  !! Must have a trailing slash !! -->

	<!-- MySQLi Options (For MySQL 4.1 and later with mysqli extension) -->
	<mysqli_username>root</mysqli_username> <!-- Username for accessing MySQL server. -->
	<mysqli_password></mysqli_password> <!-- Password for accessing MySQL server. -->
	<mysqli_host>localhost</mysqli_host> <!-- Host where MySQL is running. -->
</config>
